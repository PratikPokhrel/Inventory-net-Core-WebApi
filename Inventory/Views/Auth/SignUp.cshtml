@model ApplicationUserViewModel
@{ ViewData["Title"] = "Register"; }


<div class="contentInside">
    <div class="wrapperMainCNt">
        <div class="headerHolidays">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="row">
            <form asp-controller="Auth" asp-action="SignUp" class="col s12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="addEditSec">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="FirstName" type="text" />
                                    <label asp-for="FirstName"></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="LastName" type="text" />
                                    <label asp-for="LastName"></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="Email" type="text" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="UserName" type="text" />
                                    <label asp-for="UserName"></label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="Password" type="password" />
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s4">
                                    <input asp-for="ConfirmPassword" type="password" />
                                    <label asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            @*<div asp-validation-summary="All" class="text-danger"></div>*@

                            <div class="row">
                                <button type="submit" class="btn btn-primary">Update </button>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
